set autoindent
set expandtab
set shiftround
set shiftwidth=2
set smarttab
set tabstop=2

set hlsearch
set incsearch
set smartcase

set encoding=utf-8
set linebreak
set scrolloff=5
set sidescrolloff=10

set ruler
set relativenumber
set noerrorbells
set background=dark

filetype indent on
syntax enable
