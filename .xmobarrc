Config { font = "-*-terminus-medium-r-normal-*-12-*-*-*-*-*-*-*"
       , additionalFonts = []
       , borderColor = "#030405"
       , border = TopB
       , bgColor = "#1d1f21"
       , fgColor = "#7cafc2"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Com "hostname" [] "" 36000
  		    , Run Cpu ["-L","3","-H","50", "--normal","green","--high","red"] 20
		    , Run ThermalZone 0 ["-t","<temp>C"] 30
                    , Run Memory ["-t","Mem: <usedratio>%"] 20
 		    , Run DiskIO [("/", "I/O: <read> <write>")] [] 20
		    , Run BatteryP ["BAT0"] ["-t", "Bat: <left>%"] 600
                    , Run DynNetwork ["-t", "Net: <rx>K <tx>K", "-L","0","-H","32", "--normal","green","--high","red"] 20
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
 		    , Run Weather "EDDT" ["-t","<station>: <tempC>C",
                                          "-L","18","-H","25",
                                          "--normal","green",
                                          "--high","red",
                                          "--low","lightblue"] 36000
                    , Run Com "uname" ["-s","-r"] "" 36000
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %hostname% | %cpu% %thermal0% | %memory% | %diskio% | %battery% | %dynnetwork% }{ %date% | %EDDT% | %uname% "
       }
